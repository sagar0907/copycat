{
  "manifest_version": 2,
  "name": "Copy Cat",
  "short_name": "Copy Cat",
  "description": "Manage every thing you copy on web pages",
  "version": "0.0.0.1",
  "browser_action": {
    "default_icon": "images/cat_48.png",
    "default_title": "Piper Crawler",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "images/cat_16.png",
    "48": "images/cat_48.png",
    "128": "images/cat_128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "<all_urls>",
    "background",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery.js", "js/util.js", "js/contentScript.js"]
    }
  ],
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/util.js",
      "js/background.js"
    ],
    "persistent": true
  }
}